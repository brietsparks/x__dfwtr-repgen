{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - City Report
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>View City Report <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> (id: {{ cityReport.id }})</h2>
            <a href="{{ path('cityreport_edit', {id: cityReport.id}) }}">Edit</a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th colspan="1"><a href="{{ path('city_show', {'id': cityReport.city.id }) }}">{{ cityReport.city.name }}</a></th>
                    <th colspan="3">Month {{ cityReport.month }}</th>
                    <th colspan="3">YTD</th>
                </tr>
                <tr>
                    <th></th>
                    <th>{{ cityReport.year -1 }}</th>
                    <th>{{ cityReport.year }}</th>
                    <th>+/-</th>
                    <th>{{ cityReport.year -1 }}</th>
                    <th>{{ cityReport.year }}</th>
                    <th>+/-</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>New Listings</td>
                    <td>{{ cityReport.newListingsMonthPrev }}</td>
                    <td>{{ cityReport.newListingsMonthCurr }}</td>
                    <td>{{ cityReport.newListingsMonthChange }}</td>
                    <td>{{ cityReport.newListingsYtdPrev }}</td>
                    <td>{{ cityReport.newListingsYtdCurr }}</td>
                    <td>{{ cityReport.newListingsYtdChange }}</td>
                </tr>
                <tr>
                    <td>Closed Sales (Reported)</td>
                    <td>{{ cityReport.salesReportedMonthPrev }}</td>
                    <td>{{ cityReport.salesReportedMonthCurr }}</td>
                    <td>{{ cityReport.salesReportedMonthChange }}</td>
                    <td>{{ cityReport.salesReportedYtdPrev }}</td>
                    <td>{{ cityReport.salesReportedYtdCurr }}</td>
                    <td>{{ cityReport.salesReportedYtdChange }}</td>
                </tr>
                <tr>
                    <td>Closed Sales (Projected)</td>
                    <td>{{ cityReport.salesProjectedMonthPrev }}</td>
                    <td>{{ cityReport.salesProjectedMonthCurr }}</td>
                    <td>{{ cityReport.salesProjectedMonthChange }}</td>
                    <td>{{ cityReport.salesProjectedYtdPrev }}</td>
                    <td>{{ cityReport.salesProjectedYtdCurr }}</td>
                    <td>{{ cityReport.salesProjectedYtdChange }}</td>
                </tr>
                <tr>
                    <td>Listings Under Contract</td>
                    <td>{{ cityReport.ContractListingsMonthPrev }}</td>
                    <td>{{ cityReport.ContractListingsMonthCurr }}</td>
                    <td>{{ cityReport.ContractListingsMonthChange }}</td>
                    <td>{{ cityReport.ContractListingsYtdPrev }}</td>
                    <td>{{ cityReport.ContractListingsYtdCurr }}</td>
                    <td>{{ cityReport.ContractListingsYtdChange }}</td>
                </tr>
                <tr>
                    <td>Average Sales Price</td>
                    <td>{{ cityReport.AvgPriceMonthPrev }}</td>
                    <td>{{ cityReport.AvgPriceMonthCurr }}</td>
                    <td>{{ cityReport.AvgPriceMonthChange }}</td>
                    <td>{{ cityReport.AvgPriceYtdPrev }}</td>
                    <td>{{ cityReport.AvgPriceYtdCurr }}</td>
                    <td>{{ cityReport.AvgPriceYtdChange }}</td>
                </tr>
                <tr>
                    <td>Median Sales Price</td>
                    <td>{{ cityReport.MedianPriceMonthPrev }}</td>
                    <td>{{ cityReport.MedianPriceMonthCurr }}</td>
                    <td>{{ cityReport.MedianPriceMonthChange }}</td>
                    <td>{{ cityReport.MedianPriceYtdPrev }}</td>
                    <td>{{ cityReport.MedianPriceYtdCurr }}</td>
                    <td>{{ cityReport.MedianPriceYtdChange }}</td>
                </tr>
                <tr>
                    <td>Percent of Original List Price Received*</td>
                    <td>{{ cityReport.PercentReceivedMonthPrev }}</td>
                    <td>{{ cityReport.PercentReceivedMonthCurr }}</td>
                    <td>{{ cityReport.PercentReceivedMonthChange }}</td>
                    <td>{{ cityReport.PercentReceivedYtdPrev }}</td>
                    <td>{{ cityReport.PercentReceivedYtdCurr }}</td>
                    <td>{{ cityReport.PercentReceivedYtdChange }}</td>
                </tr>
                <tr>
                    <td>Days on Market Until Sale</td>
                    <td>{{ cityReport.DaysOnMarketMonthPrev }}</td>
                    <td>{{ cityReport.DaysOnMarketMonthCurr }}</td>
                    <td>{{ cityReport.DaysOnMarketMonthChange }}</td>
                    <td>{{ cityReport.DaysOnMarketYtdPrev }}</td>
                    <td>{{ cityReport.DaysOnMarketYtdCurr }}</td>
                    <td>{{ cityReport.DaysOnMarketYtdChange }}</td>
                </tr>
                <tr>
                    <td>Inventory of Homes for Sale</td>
                    <td>{{ cityReport.InventoryMonthPrev }}</td>
                    <td>{{ cityReport.InventoryMonthCurr }}</td>
                    <td>{{ cityReport.InventoryMonthChange }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Months Supply of Inventory</td>
                    <td>{{ cityReport.MonthsSupplyMonthPrev }}</td>
                    <td>{{ cityReport.MonthsSupplyMonthCurr }}</td>
                    <td>{{ cityReport.MonthsSupplyMonthChange }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>

            </tbody>
        </table>
    </div>

    <hr/>

    <div class="form-group">
        <a class="btn btn-default" href="{{ path('cityreport') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
        <a class="btn btn-primary" href="{{ path('cityreport_edit', { 'id':  cityReport.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
        </a>
        <a class="btn btn-info" href="{{ path('cityreport_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('cityreport_delete', { 'id': cityReport.id }) }}" method="post"
              style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete
            </button>
        </form>
    </div>


{% endblock %}

