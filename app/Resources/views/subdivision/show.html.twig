{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Subdivision
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>Views Subdivision <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h2>
            <a href="{{ path('subdivision_edit', {id: subdivision.id}) }}">Edit</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <p><strong>Id</strong></p>
            <p>
                {{ subdivision.id }}
            </p>

        </div>
        <div class="col-md-3">
            <p><strong>Name</strong></p>
            <p>
                {{ subdivision.name }}
            </p>
        </div>
        <div class="col-md-3">
            <p><strong>City</strong></p>
            <p>
                <a href="{{ path('city_show', {id: subdivision.city.id}) }}">
                    {{ subdivision.city.name }}
                </a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <p><strong>Reports</strong></p>
            <ul>
                {#{% for report in city.getReports() %}#}
                    {#<li>#}
                        {#<a href="{{ path('cityreport_show', {'id': report.id})}}">#}
                            {#(id: {{ report.id }})... {{ report.year}}-{{ report.month }}#}
                        {#</a>#}
                    {#</li>#}

                {#{% endfor %}#}
            </ul>
        </div>
    </div>



    <hr/>


    <div class="form-group">
        <a class="btn btn-default" href="{{ path('subdivision') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
        <a class="btn btn-primary" href="{{ path('subdivision_edit', { 'id':  subdivision.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
        </a>
        <a class="btn btn-info" href="{{ path('subdivision_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('subdivision_delete', { 'id': subdivision.id }) }}" method="post"
              style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete
            </button>
        </form>
    </div>


{% endblock %}

