{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  Edit Subdivision Report
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>Edit Subdivision Report <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
            <a href="{{ path('subdivisionreport_show', {id: subdivisionReport.id}) }}">View (lose unsaved changes)</a>
        </div>
    </div>



    <div class="row">
        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        {% embed 'subdivisionreport/form.html.twig' with {'form': edit_form} %}
        {% endembed %}

        <hr/>


        <div class="form-group">
            <a class="btn btn-default" href="{{ path('subdivisionreport') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-info" href="{{ path('subdivisionreport_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
            <form action="{{ path('subdivisionreport_delete', { 'id': subdivisionReport.id }) }}" method="post"
                  style="display: inline-block">
                <input type="hidden" name="_method" value="DELETE"/>
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Delete
                </button>
            </form>
        </div>

    </div>


{% endblock %}

