{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Subdivision Report
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>View Subdivision Report <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h2>
            <a href="{{ path('subdivisionreport_edit', {id: subdivisionReport.id}) }}">Edit</a>

            <div>
                <div class="col-md-4 pull-right">
                    <div class="row">
                        <div class="col-md-4">
                            <h3 class="pull-right">Spin:</h3>
                        </div>

                        <div class="col-md-4">
                            <a class="btn btn-primary h3" href="{{ path('api_subdiv_article_show', {
                                'cityName': subdivisionReport.subdivision.city.name,
                                'subdivisionName': subdivisionReport.subdivision.name,
                                'endMonth': subdivisionReport.getEndMonth(),
                                'endDay': subdivisionReport.getEndDay(),
                                'endYear': subdivisionReport.getEndYear()

                            }) }}" style="margin-bottom:10px">
                                <span class="glyphicon glyphicon-cloud" aria-hidden="true"></span> Json API
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-primary h3" href="{{ path('subdivisionreport_export', {
                                'cityName': subdivisionReport.subdivision.city.name,
                                'subdivisionName': subdivisionReport.subdivision.name,
                                'endMonth': subdivisionReport.getEndMonth(),
                                'endDay': subdivisionReport.getEndDay(),
                                'endYear': subdivisionReport.getEndYear()
                            }) }}" style="margin-bottom:10px">
                                <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span> Text File
                            </a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <p><strong>Id</strong></p>
            <p>
                {{ subdivisionReport.id }}
            </p>

        </div>
        <div class="col-md-3">
            <p><strong>Subdivision</strong></p>
            <p>
                {% if subdivisionReport.subdivision %}{{ subdivisionReport.subdivision.name }}{% endif %}
            </p>

        </div>
        <div class="col-md-3">
            <p><strong>Start</strong></p>
            <p>
                {% if subdivisionReport.start %}{{ subdivisionReport.start|date('Y-m-d') }}{% endif %}
            </p>

        </div>
        <div class="col-md-3">
            <p><strong>End</strong></p>
            <p>
                {% if subdivisionReport.end %}{{ subdivisionReport.end|date('Y-m-d') }}{% endif %}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Sqft_min</strong></p>
            <p>
                {{ subdivisionReport.sqftmin }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Sqft_max</strong></p>
            <p>
                {{ subdivisionReport.sqftmax }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Sqft_avg</strong></p>
            <p>
                {{ subdivisionReport.sqftavg }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Price_min</strong></p>
            <p>
                {{ subdivisionReport.pricemin }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Price_max</strong></p>
            <p>
                {{ subdivisionReport.pricemax }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Price_avg</strong></p>
            <p>
                {{ subdivisionReport.priceavg }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Pricepersqft_min</strong></p>
            <p>
                {{ subdivisionReport.pricePerSqftmin }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Pricepersqft_max</strong></p>
            <p>
                {{ subdivisionReport.pricePerSqftmax }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Pricepersqft_avg</strong></p>
            <p>
                {{ subdivisionReport.pricePerSqftavg }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Dom_min</strong></p>
            <p>
                {{ subdivisionReport.dommin }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Dom_max</strong></p>
            <p>
                {{ subdivisionReport.dommax }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Dom_avg</strong></p>
            <p>
                {{ subdivisionReport.domavg }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Year_min</strong></p>
            <p>
                {{ subdivisionReport.yearmin }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Year_max</strong></p>
            <p>
                {{ subdivisionReport.yearmax }}
            </p>

        </div>
        <div class="col-md-4">
            <p><strong>Year_avg</strong></p>
            <p>
                {{ subdivisionReport.yearavg }}
            </p>

        </div>
    </div>

    <hr/>


    <div class="form-group">
        <a class="btn btn-default" href="{{ path('subdivisionreport') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Back to list
        </a>
        <a class="btn btn-primary" href="{{ path('subdivisionreport_edit', { 'id':  subdivisionReport.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
        </a>
        <a class="btn btn-info" href="{{ path('subdivisionreport_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
        <form action="{{ path('subdivisionreport_delete', { 'id': subdivisionReport.id }) }}" method="post"
              style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE"/>
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete
            </button>
        </form>
    </div>


{% endblock %}

